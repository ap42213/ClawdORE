{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd clawdbot && cargo build --release --bin simulation-bot"
  },
  "deploy": {
    "startCommand": "cd clawdbot && ./target/release/simulation-bot",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
